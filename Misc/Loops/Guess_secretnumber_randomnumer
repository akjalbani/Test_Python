# Reference : https://www.linkedin.com/pulse/learn-looping-python-fun-text-based-games-doug-purcell/
import random
import time

random_num = random.randint(1, 10000)
print("Our Secret Nmber : ", random_num)
count= 0
print(time.sleep(3))
while True:

  if random_num == count:

    print("The secret number is {}!".format(count))

    print("It took {} cycles to find it.".format(count + 1))

    break

  else:

    print("{} is not the secret number".format(count))

    count += 1
